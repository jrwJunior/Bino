.trial {
	h2 {
		font-weight: inherit;
	}

	strong {
		font-weight: 700;
	}

	.subtitle {
		margin-top: 0;
	}
}

.bg-trial {
	position: relative;
	background: url('../../img/banner/free.jpg') no-repeat center/cover;
	padding: var(--mdc-section-padding) 0;

	&:before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		display: block;
		width: 100%;
		height: 100%;
		background: rgba(0,0,0,0.6);
	}
}

.trial-button {
	margin-top: 60px;
}